{
  "name": "ios-app-review-plugin",
  "version": "0.4.0",
  "description": "Claude Code MCP plugin to review iOS apps before App Store submission",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ios-app-review": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ios",
    "app-store",
    "review",
    "mcp",
    "claude-code",
    "xcode",
    "apple"
  ],
  "author": "ahmetsina",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ahmetsina/ios-app-review-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/ahmetsina/ios-app-review-plugin/issues"
  },
  "homepage": "https://github.com/ahmetsina/ios-app-review-plugin#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "fast-glob": "^3.3.2",
    "plist": "^3.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "@types/plist": "^3.0.5",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "nock": "^13.5.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
